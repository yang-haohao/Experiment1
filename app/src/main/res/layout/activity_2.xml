<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <Button
        android:id="@+id/btn2_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="第一个Button"

        android:layout_marginRight="40dp"
        android:layout_marginTop="200dp"
        android:layout_alignParentLeft="true"
        ></Button>

    <Button
        android:id="@+id/btn2_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="第二个Button"
        android:layout_toRightOf="@id/btn2_1"
        android:layout_alignTop="@id/btn2_1"
        ></Button>

    <Button
        android:id="@+id/btn2_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginRight="40dp"
        android:text="第三个Button"
        android:layout_below="@id/btn2_1"
        android:layout_alignLeft="@id/btn2_1"
        ></Button>

    <Button
        android:id="@+id/btn2_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="第四个Button"
        android:layout_toRightOf="@id/btn2_3"
        android:layout_alignTop="@id/btn2_3"
        ></Button>


    <Button
        android:id="@+id/btn2_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="返回" />

</RelativeLayout>